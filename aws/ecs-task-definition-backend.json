{
  "family": "hive-platform-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/HivePlatformECSExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/HivePlatformECSTaskRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/hive-platform-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3001"
        },
        {
          "name": "CORS_ORIGIN",
          "value": "https://your-domain.com"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://your-redis-endpoint.cache.amazonaws.com:6379"
        },
        {
          "name": "S3_ENDPOINT",
          "value": "https://s3.us-east-1.amazonaws.com"
        },
        {
          "name": "S3_BUCKET",
          "value": "hive-platform-artifacts-YOUR_ID"
        },
        {
          "name": "S3_REGION",
          "value": "us-east-1"
        },
        {
          "name": "S3_FORCE_PATH_STYLE",
          "value": "false"
        },
        {
          "name": "OPENAI_MODEL",
          "value": "gpt-4-turbo-preview"
        },
        {
          "name": "OPENAI_EMBEDDING_MODEL",
          "value": "text-embedding-ada-002"
        },
        {
          "name": "JWT_EXPIRES_IN",
          "value": "24h"
        },
        {
          "name": "USE_REAL_AI",
          "value": "true"
        },
        {
          "name": "DRY_RUN_APPLY",
          "value": "false"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "ENABLE_TELEMETRY",
          "value": "false"
        }
      ],
      "secrets": [
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:hive-platform/secrets-XXXXXX:JWT_SECRET::"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:hive-platform/secrets-XXXXXX:OPENAI_API_KEY::"
        },
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:YOUR_ACCOUNT_ID:secret:hive-platform/secrets-XXXXXX:DATABASE_URL::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/hive-platform-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "backend"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"require('http').get('http://localhost:3001/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

