{
  "name": "hive-main-tests",
  "version": "1.0.0",
  "description": "Main test suite with coverage for Hive platform",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --config=jest.config.coverage.js --coverage",
    "test:watch": "jest --watch",
    "coverage:report": "npm run test:coverage && npm run coverage:analyze",
    "coverage:analyze": "node analyze-coverage.js",
    "coverage:clean": "rm -rf coverage coverage-logs",
    "test:verbose": "jest --config=jest.config.coverage.js --coverage --verbose --detectOpenHandles",
    "test:ci": "jest --config=jest.config.coverage.js --coverage --ci --maxWorkers=2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.4",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}